<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evoza.ui.ProfileHomePage">
    <!-- Top Section: Custom Title Bar -->
    <top>
        <HBox fx:id="customTitleBar" spacing="10" style="-fx-background-color: #9aafc0; -fx-text-fill: #fff;">
            <ImageView fx:id="logo" fitHeight="20" fitWidth="20" />
            <Label text="Evoza Web Browser" style="-fx-text-fill: #fff;" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox fx:id="tabButtonsArea" spacing="10" style="-fx-background-color: #9aafc0;">
                <Button fx:id="addTabButton" text="+" onAction="#addNewTab" />
            </HBox>
            <Button fx:id="minimizeButton" text="-" onAction="#minimizeWindow" />
            <Button fx:id="maximizeButton" text="[]" onAction="#maximizeWindow" />
            <Button fx:id="closeButton" text="X" onAction="#closeWindow" />
        </HBox>
    </top>

    <!-- Left Section: Sidebar -->
    <left>
        <VBox style="-fx-background-color: #2C3E50; -fx-padding: 20; -fx-alignment: center;">
            <ImageView fx:id="sidebarLogo" fitHeight="40" fitWidth="40" />
            <Region VBox.vgrow="ALWAYS" />
            <HBox style="-fx-alignment: center;">
                <Polygon points="0,20 20,0 40,20" fill="#1A252F" />
                <Rectangle width="20" height="20" fill="#1A252F" />
            </HBox>
        </VBox>
    </left>

    <!-- Center Section: Main Content Area -->
    <center>
        <VBox>
            <!-- Header with search bar and action buttons -->
            <HBox spacing="10" padding="10" style="-fx-background-color: #ddd;">
                <HBox fx:id="searchBar" spacing="5" style="-fx-background-color: white; -fx-border-radius: 20; -fx-padding: 5 10; -fx-background-radius: 20; -fx-alignment: center;">
                    <ImageView fx:id="searchIcon" fitHeight="20" fitWidth="20" />
                    <TextField fx:id="searchInput" promptText="Find Bookmarks" style="-fx-background-color: transparent; -fx-border: none; -fx-padding: 10; -fx-font-size: 14;" />
                </HBox>
                <HBox spacing="10" style="-fx-alignment: center;">
                    <Button fx:id="addButton" text="+" />
                    <Button fx:id="editButton" text="✎" />
                    <Button fx:id="settingsButton" text="⚙" />
                </HBox>
            </HBox>

            <!-- Sections for Favorites, Dev Sites, and General -->
            <VBox fx:id="contentArea" spacing="20" padding="20">
                <VBox spacing="10">
                    <Label text="Favorites" style="-fx-font-size: 18; -fx-text-fill: #333;" />
                    <FlowPane fx:id="favoritesGrid" hgap="20" vgap="20" />
                </VBox>
                <VBox spacing="10">
                    <Label text="Dev Sites" style="-fx-font-size: 18; -fx-text-fill: #333;" />
                    <FlowPane fx:id="devSitesGrid" hgap="20" vgap="20" />
                </VBox>
                <VBox spacing="10">
                    <Label text="General" style="-fx-font-size: 18; -fx-text-fill: #333;" />
                    <FlowPane fx:id="generalGrid" hgap="20" vgap="20" />
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>